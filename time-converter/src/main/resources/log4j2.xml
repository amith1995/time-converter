<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" packages="com.amith">
	<CustomLevels>
		<CustomLevel name="REQUEST" intLevel="1000" />
	</CustomLevels>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="[%d{yyy-MM-dd HH:mm:ss}] - %msg%n" />
		</Console>
		<File name="MyFile" fileName="logs/time-converter.log"
			immediateFlush="false" append="false">
			<PatternLayout
				pattern="[%d{yyy-MM-dd HH:mm:ss}] - %msg%n" />
		</File>
		
	</Appenders>
	<Loggers>
		<Root level="debug">
			<AppenderRef ref="Console" />
			<AppenderRef ref="MyFile" />
		</Root>
	</Loggers>
</Configuration>
